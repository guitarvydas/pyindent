scm2py {

Def = "(" kw<"define"> "(" fname argname* ")" ScopeOrExpr ")"
ScopeOrExpr =
  | Scope -- scope
  | Expr+ -- expr
Scope = "(" kw<"let"> "(" "(" ident Expr ")" ")" ScopeOrExpr? ")"
Expr =
  | "(" "+" atom atom ")" Expr? -- add
  | "(" "-" atom atom ")" Expr? -- subtract

fname = ident
argname = ident
kw<s> = id<s>
id<s> = "❲" s "❳"
ident = "❲" idchar+ "❳"
idchar = ~"❲" ~"❳" any
atom =
  | ident -- ident
  | digit+ -- integer
}
